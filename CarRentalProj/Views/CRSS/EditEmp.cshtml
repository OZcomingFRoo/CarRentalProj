@model CarRentalProj.Worker

@{
    ViewBag.Title = "EditEmp";
}
@Html.Partial("CEOnav")

<h2>EditEmp</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Worker</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PSWD, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PSWD, new { htmlAttributes = new { @class = "form-control" , @id = "PStoggle", @type ="password" } })
                @Html.ValidationMessageFor(model => model.PSWD, "", new { @class = "text-danger" })
                <input type="checkbox" onclick="show()">Show Password
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.profession, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="profession">
                    @if(Model.profession == "Admin")
                    {
                        <option value="Admin" selected="selected">Admin</option>
                        <option value="Emp">Employee</option>
                    }
                    else
                    {
                        <option value="Admin">Admin</option>
                        <option value="Emp" selected="selected">Employee</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.profession, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("To List", "CEO_EmpsCMD")
</div>
<script src="~/ServerScripts/PasswordToggle.js"></script>

