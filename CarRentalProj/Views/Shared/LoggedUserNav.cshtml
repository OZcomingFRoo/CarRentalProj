                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                @*This is basicly the three lines it creates for you , no need to Edit This!*@
            </button>
            @Html.ActionLink("Car Rentz", "Home", "CarRentz", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-left">@*Left*@
                <li style="padding-left:5px;"><a href="/CarRentz/AboutUs">About Us</a></li>
                <li style="padding-left:5px;"><a href="/CarRentz/Policy">Our Policy</a></li>
                <li style="padding-left:5px;"><a href="/CarRentz/ManageCars">My Cars</a></li>
                <li style="padding-left:5px;"><button onclick="ShowStuff()" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#WishListModal">WishList</button></li>
