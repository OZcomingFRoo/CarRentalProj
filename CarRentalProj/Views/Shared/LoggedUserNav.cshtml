</div>



<div id="WishListModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick="CloseWishList()">&times;</button>
                <h4 class="modal-title">WishList</h4>
            </div>
            <div class="modal-body">
                <p>So far...</p>
                <ul id="list"></ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="CloseWishList()">Close</button>
                <button type="button" class="btn btn-warning" data-dismiss="modal" onclick="RemoveList()">Remove Current List</button>
            </div>
        </div>
        <script>
            function ShowStuff() {
                var Arr = [];
                var i = 0;
                for (var key in localStorage) {
                    $("#list").append("<li><a href=/CarRentz/CarDetails?CID=" + key + ">" + localStorage[key] + "</a></li>");
                }

            }
            function RemoveList() {
                localStorage.clear();
                CloseWishList();
            }
            function CloseWishList()
            {
                $("#list").empty();
            }
        </script>
    </div>
</div>